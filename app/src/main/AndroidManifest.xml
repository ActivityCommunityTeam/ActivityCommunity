<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.administrator.activitycommunity">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".TestActivity">
        </activity>
        <activity
            android:name=".activity.Test2Activity"
            android:label="@string/title_activity_test2"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".activity.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.XQActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.CalenderActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.SelectRoleActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.XQ_ApplyActivity">
        </activity>
    </application>

</manifest>