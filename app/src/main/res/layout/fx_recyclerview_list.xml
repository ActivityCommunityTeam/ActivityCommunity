<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >

        <!--sss-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"
        android:descendantFocusability="blocksDescendants"
        >

        <FrameLayout
            android:padding="@dimen/appbar_padding_top"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/activity_pic_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/fj_icon"
                />
        </FrameLayout>

        <LinearLayout
            android:paddingTop="@dimen/appbar_padding_top"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/activity_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中大新校区赏樱花"
                android:textSize="@dimen/mediumsp"
                android:textColor="@color/colorFont_blake"
                />

            <TextView
                android:id="@+id/activity_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/point"
                android:drawablePadding="4dp"
                android:text="时间:2016-10-19"
                android:textSize="@dimen/smallsp"
                />

            <TextView
                android:id="@+id/activity_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/point"
                android:drawablePadding="4dp"
                android:text="地点"
                android:textSize="@dimen/smallsp"
                />

            <!---->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/appbar_padding_top"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/activity_attended_tv"
                    android:layout_width="0dp"
                    android:textSize="@dimen/mediumsp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已报名：52"
                    />

                <TextView
                    android:id="@+id/activity_price_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/md_button_padding_horizontal_internalexternal"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/appbar_padding_top"
                    android:background="@drawable/tj_recylist_item_money_txt_sel"
                    android:text="￥30"
                    android:gravity="center"
                    android:textColor="#4FC589"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
