<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/zhifu"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="黛眉山长跑"
        android:gravity="center"
        android:textColor="@color/colorFont_white"
        android:layout_alignBottom="@+id/img"
        />
    <TextView
        android:id="@+id/begintime_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始时间"
        android:gravity="center"
        android:layout_below="@id/img"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="￥80元"
        android:layout_below="@+id/begintime_tv"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFont_white"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:id="@+id/xq_apply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去付款"
                android:textColor="#23CD77"
                android:background="@drawable/lvkuang"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:id="@+id/xq_atttion_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#FF5500"
                android:background="@drawable/chengkuang"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
