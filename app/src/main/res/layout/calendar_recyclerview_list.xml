<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp">

                <ImageView
                    android:padding="@dimen/appbar_padding_top"
                    android:id="@+id/activity_pic_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/fj_icon"
                    />
            </FrameLayout>

            <LinearLayout
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingBottom="@dimen/appbar_padding_top"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/activity_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中大新校区赏樱花"
                    android:singleLine="true"
                    android:textSize="@dimen/mediumsp"
                    android:textColor="@color/colorFont_blake"
                    />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/activity_begaintime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="5dp"
                    android:text="开始时间："
                    android:textSize="@dimen/tinysp"
                    />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/activity_endtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="5dp"
                    android:text="结束时间："
                    android:textSize="@dimen/tinysp"
                    />

                <TextView
                    android:singleLine="true"
                    android:id="@+id/activity_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="5dp"
                    android:text="地址："
                    android:textSize="@dimen/tinysp"
                    />




            </LinearLayout>


        </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clicklook"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@drawable/tj_recylist_item_line_shap" />
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/activity_sumPrice_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总金额:60"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/appbar_padding_top"
                android:textSize="@dimen/mediumsp"
                />

            <TextView
                android:id="@+id/activity_attended_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已报名：52"
                android:gravity="center_vertical"
                android:textSize="@dimen/mediumsp"
                />

            <TextView
                android:id="@+id/activity_apply_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/md_button_padding_horizontal_internalexternal"
                android:layout_weight="1"
                android:text="报名中"
                android:background="@drawable/tj_recylist_item_money_txt_sel"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="@dimen/appbar_padding_top"
                />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
