<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/activity_pic_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fj_icon"
                    />
            </FrameLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/activity_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中大新校区赏樱花"
                    android:textSize="15sp"
                    android:textColor="@color/colorFont_blake"
                    />

                <TextView
                    android:id="@+id/activity_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:text="时间:2016-10-19"
                    />

                <TextView
                    android:id="@+id/activity_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:text="地点"
                    />

                <TextView
                    android:id="@+id/activity_sponsor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="4dp"
                    android:text="洛阳禾嘉通信有限公司"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ccc"></View>


            </LinearLayout>


        </LinearLayout>
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/activity_sumPrice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总金额：60"

                />

            <TextView
                android:id="@+id/activity_attended_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已报名：52"
                />

            <TextView
                android:id="@+id/activity_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥30"
                android:textColor="#4FC589"
                />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
