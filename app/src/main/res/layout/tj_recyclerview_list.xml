<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:descendantFocusability="blocksDescendants"

        android:orientation="vertical">
        <!---->
        <!---->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@drawable/tj_recylist_item_line_shap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
               android:padding="@dimen/appbar_padding_top">

                <ImageView
                    android:id="@+id/activity_pic_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/fj_icon"
                    android:background="@drawable/list_img_layer"
                    />
            </FrameLayout>
            <LinearLayout
                android:paddingTop="@dimen/appbar_padding_top"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/activity_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="中大新校区赏樱花"
                    android:textSize="@dimen/mediumsp"
                    android:textColor="@color/colorFont_blake"
                    />

                <TextView
                    android:id="@+id/activity_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:text="时间:2016-10-19"
                    android:textSize="@dimen/smallsp"
                    android:paddingTop="2dp"
                    />

                <TextView
                    android:id="@+id/activity_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/point"
                    android:drawablePadding="4dp"
                    android:text="地点"
                    android:textSize="@dimen/smallsp"
                    android:paddingBottom="2dp"
                    />

                <TextView
                    android:id="@+id/activity_sponsor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/list_home"
                    android:drawablePadding="4dp"
                    android:textSize="@dimen/smallsp"
                    android:textColor="@color/orange"
                    android:text="洛阳禾嘉通信有限公司"
                    />




            </LinearLayout>

        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginLeft="@dimen/appbar_padding_top"
    android:layout_marginRight="@dimen/appbar_padding_top"
    android:layout_marginBottom="@dimen/tinymdp"
    android:background="@drawable/tj_recylist_item_line_shap"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/activity_sumPrice_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="总金额：60"
                android:paddingLeft="@dimen/appbar_padding_top"
                android:textSize="@dimen/mediumsp"
                />

            <TextView
                android:id="@+id/activity_attended_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已报名：52"
                android:textSize="@dimen/mediumsp"
                />

            <TextView
                android:id="@+id/activity_price_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/md_button_padding_horizontal_internalexternal"
                android:layout_weight="1"
                android:text="￥30"
                android:gravity="center"
                android:layout_marginRight="@dimen/appbar_padding_top"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/tj_recylist_item_money_txt_sel"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
